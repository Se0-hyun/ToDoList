<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ToDoList" parent="Theme.AppCompat">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#99A799</item>
        <item name="colorPrimaryVariant">#D3E4CD</item>
        <item name="colorOnPrimary">#000000</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="titleTextColor">@color/black</item>

        <item name="android:textViewStyle">@style/hmbsTextView</item>
        <item name="android:buttonStyle">@style/hmbsButton</item>
        <item name="android:editTextStyle">@style/hmbsEditText</item>
    </style>

    <style name="hmbsTextView" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/hmbs</item>
    </style>
    <style name="hmbsButton" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/hmbs</item>
    </style>
    <style name="hmbsEditText" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/hmbs</item>
    </style>
    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:fontFamily">@font/cafeclassic</item>
    </style>
    
    <style name="SplashTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">@drawable/background</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>
</resources>